<!-- views/pages/index.ejs -->

<% include ../common/header %>

<div class="row">
    <div class="col-md-6">
        <!-- Blog Edit View -->
        <div ng-controller="blogController">
            
            <div class="alert alert-warning">There are {{blogList.length}} blog articles</div>

            <form ng-submit="createBlog()">

                <h4>Blog Edit</h4>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Blog Title" ng-model="blogTitle"></input>
                </div>

                <div class="form-group">
                    <textarea class="form-control" placeholder="Blog Content" ng-model="blogContent"></textarea>
                </div>

                <input type="Submit" class="btn btn-info" value="Submit">

            </form>
        </div>
    </div>
</div>

<% include ../common/footer %>
